<%= form_with model: @user, url: user_registration_path , class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ラーメンの好みを教えて下さい♪
    </h1>
  </div>



  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) 山田二郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

    <div class="form-group">
      <div class="weight-bold-text question-text">
        <span>ラーメンの好み</span>
      </div>
      <div class="form">
        <div class="weight-bold-text">
          麺の硬さ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:noodle_id, Noodle.all, :id, :name, {}, {class:"select-box", id:"user-noodle"}) %>
        <div class="weight-bold-text">
          スープの状態
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:soup_id, Soup.all, :id, :name, {}, {class:"select-box", id:"user-soup"}) %>
        <div class="weight-bold-text">
          豚の硬さ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:meat_id, Meat.all, :id, :name, {}, {class:"select-box", id:"user-meat"}) %>
        <div class="weight-bold-text">
          野菜の硬さ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:vegetable_id, Vegetable.all, :id, :name, {}, {class:"select-box", id:"user-vegetable"}) %>
        <div class="weight-bold-text">
          ニンニクの辛さ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:garlic_id, Garlic.all, :id, :name, {}, {class:"select-box", id:"user-garlic"}) %>
        <div class="weight-bold-text">
          油の量
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:oil_id, Oil.all, :id, :name, {}, {class:"select-box", id:"user-oil"}) %>
      </div>

    </div>

  <div class="form-group">
    <h2 class='form-bottom-text'>
      <br>
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>
